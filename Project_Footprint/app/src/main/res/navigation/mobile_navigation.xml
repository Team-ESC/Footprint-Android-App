<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.haerokim.project_footprint.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_surround"
            app:destination="@id/navigation_surround" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.haerokim.project_footprint.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_menu"
        android:name="com.haerokim.project_footprint.ui.menu.MenuFragment"
        android:label="@string/title_menu"
        tools:layout="@layout/fragment_menu" />

    <fragment
        android:id="@+id/navigation_surround"
        android:name="com.haerokim.project_footprint.ui.surround.SurroundFragment"
        android:label="@string/title_surround"
        tools:layout="@layout/fragment_surround" />

</navigation>